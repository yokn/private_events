

<h1 class="title">Events</h1>

<table  class="table">
  <thead>
    <tr>
      <th class="subtitle">Past events</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.past.each do |event| %>
      <tr>
        <td><%= link_to event.name, event, class:"button is-link" %></td>
        <td><i class="fas fa-user"> </i> <%= event.attendees.size %></td>
        <td><i class="fas fa-calendar"> </i> <%= event.date %></td>
      </tr>
    <% end %>
  </tbody>

  <thead>
    <tr>
      <th class="subtitle">Upcoming events</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.upcoming.each do |event| %>
      <tr>
        <td><%= link_to event.name, event, class:"button is-link" %></td>
        <td><i class="fas fa-user"> </i> <%= event.attendees.size %></td>
        <td><i class="fas fa-calendar"> </i> <%= event.date %></td>
      </tr>
    <% end %>
  </tbody>
</table>




